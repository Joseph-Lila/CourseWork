<Reports> :

    statistic: statistic
    volume_per_month: volume_per_month

    Accordion:

        orientation: 'vertical'

        AccordionItem:
            title: 'Статистика'
            FloatLayout:
                id: statistic

        AccordionItem:
            title: 'Объемы услуг за месяц'
            FloatLayout:
                id: volume_per_month

    GridLayout:

        size_hint: (1, .05)
        valign: 'top'
        cols: 3
        rows: None
        spacing: 10

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'arrow-left'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: root.manager.current = 'director'

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'arrow-up'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: root.load_data()

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'door'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: app.stop()

        Widget:

        Widget:
