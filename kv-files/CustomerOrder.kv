<CustomerOrder>:

    cont: cont

    BoxLayout:

        AnchorLayout:

            Card:

                size_hint: .8, .85
                pos_hint: {'center_x': .5, 'center_y': .5}
                md_bg_color: [255/255, 255/255, 255/255, 0.8]

                ScrollView:

                    BoxLayout:

                        id: cont
                        orientation: "vertical"
                        size_hint_y: None
                        height: self.minimum_height

                        MDTextButton:

                            text: 'game 1_'
                            heigh: dp(60)
    GridLayout:

        size_hint: (1, .05)
        valign: 'top'
        cols: 2
        rows: None
        spacing: 10

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'basket'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: root.manager.current = 'basket'

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'door'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: app.stop()

        Widget:

        Widget:
