<Courier> :
    label: label
    btn1: btn1
    btn2: btn2

    md_bg_color: [40/255, 40/255, 180/255, 1]

    Card :
        spacing: 50

        Widget:
            height: 10

        MyLabel:
            id: label
            text: 'Заказ №...'

        MyButton:
            id: btn1
            text: 'Поставить отметку выполнено'
            on_press: root.completed()

        MyButton:
            id: btn2
            text: 'Сведения о заказе'
            on_press: root.info()

    GridLayout:

        size_hint: (1, .05)
        valign: 'top'
        cols: 3
        rows: None
        spacing: 10

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'arrow-left'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: root.manager.current = 'choose_role'

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'arrow-up'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: root.load_data()

        AnchorLayout:

            MDIconButton :
                user_font_size: "20sp"
                icon_color: [1, 1, 1, 1]
                icon: 'door'
                md_bg_color: [249 / 255, 166 / 255, 2 / 255, 255 / 255]
                on_press: app.stop()
